int espacios(tag){
    char palabra[50];

    FILE *filePointer;
    filePointer = fopen("palabras.dat","rb");
    
    fseek (filePointer, tag, SEEK_SET);
    fread (&palabra, sizeof(char), 1, filePointer);
    printf("%s\n", palabra);
}

int dificultad{
    int dificultad() {
    bool salir = false;
    int eleccion, tag;
    system("cls");
    do
    {
        printf("Dificultad: \n");
        printf("1. Fácil: de 4 a 5 letras.\n");
        printf("2. Medio: de 6 a 9 letras.\n");
        printf("3. Difícil: de 10 a 13 letras.\n");
        printf("Seleccione dificultad: ");
        scanf("%d", &eleccion);
        switch (eleccion)
        {
        case 1:
            tag = rand() % 36; 
            salir = true;
            break;
        case 2:
            tag = 36 + rand() % 36;
            salir = true;
            break;
        case 3:
            tag = 71 + rand() % 36;
            salir = true;
            break;
        default:
            system("cls");
            printf("Opción no válida.\n");
            break;
        }
    } while (salir != true);

    system("cls");
    return tag;
}
}
